/* Initialement caché */
.hidden {
    display: none;
}

/* Page de départ */
.content {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    text-align: center;
}

/* Le bouton Yes */
.yes-btn {
    background-color: pink;
    color: white;
    font-size: 20px;
    padding: 15px 30px;
    border: none;
    cursor: pointer;
}

/* Cœurs animés */
.hearts-container {
    position: relative;
    width: 100%;
    height: 100vh;
    pointer-events: none;
}

.heart {
    position: absolute;
    width: 30px;
    height: 30px;
    background-color: pink;
    clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
    animation: float 5s ease-in-out infinite;
}

/* Animation des cœurs */
@keyframes float {
    0% {
        transform: translateY(0) rotate(0deg);
    }
    50% {
        transform: translateY(-200px) rotate(180deg);
    }
    100% {
        transform: translateY(0) rotate(360deg);
    }
}

/* Le grand cœur formé et le message */
.heart-message {
    font-size: 40px;
    color: white;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-weight: bold;
    opacity: 0;
    z-index: 10;
    animation: fadeInMessage 2s forwards;
}

@keyframes fadeInMessage {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}
